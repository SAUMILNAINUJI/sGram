<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile | sGram</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/flash.css">
    <style>
        .profile-img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid var(--primary-color);
            margin-bottom: 20px;
            transition: transform 0.3s;
        }

        .profile-img:hover {
            transform: scale(1.03);
        }

        /* Using edit-color for the Save button */
        .btn-update-theme {
            background-color: var(--edit-color);
            border-color: var(--edit-color);
            color: white;
            transition: all 0.2s;
            font-weight: 600;
        }

        .btn-update-theme:hover {
            background-color: #d08918;
            border-color: #d08918;
            transform: translateY(-1px);
        }



        .status-tag {
            font-size: 0.9rem;
            font-weight: 700;
            padding: 4px 10px;
            border-radius: 15px;
            display: inline-block;
            margin-left: 10px;
        }

        .status-premium {
            background-color: var(--edit-color);
            color: white;
            box-shadow: 0 2px 5px rgba(243, 156, 18, 0.5);
        }

        .status-basic {
            background-color: #ccc;
            color: var(--secondary-color);
        }
    </style>
</head>

<body>
    <%- include('partials/navbar', {activePage: 'profile' }) %>
    <%- include('partials/flash') %>
        <div class="container mt-5 mb-5">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card profile-card p-4 text-center">
                        <div class="card-body">

                            <!-- <img src="./images/uploads/<%= user.profilepic %>" class="profile-img shadow-sm"
                            alt="<%= user.username %>'s Profile Picture"> -->
                            <img src="/images/uploads/<%= user.profilepic %>"
                                class="profile-img shadow-sm <%= user.isPremium ? 'premium-border' : '' %>">

                            <h1 class="card-title mb-3" style="color: var(--secondary-color);">
                                <%= user.username %>
                                    <span class="status-tag <%= user.isPremium ? 'status-premium' : 'status-basic' %>">
                                        <% if (user.isPremium) { %>
                                            <i class="fas fa-crown me-1"></i> Premium
                                            <% } else { %>
                                                Basic User
                                                <% } %>
                                    </span>
                            </h1>
                            <p class="text-muted mb-4">Account Settings and Information</p>


                            <div class="text-start mb-5 p-3 bg-light rounded border border-primary-subtle">
                                <p class="lead mb-2"><i class="fas fa-envelope me-2 text-muted"></i> Email: <%=
                                        user.email %>
                                </p>
                                <p class="lead mb-0"><i class="fas fa-clock me-2 text-muted"></i> Member Since:<%=
                                        user._id.getTimestamp().toDateString() %>
                                </p>
                            </div>

                            <h4 class="text-start mb-3" style="color: var(--primary-color);">
                                <i class="fas fa-image me-2"></i> Update Profile Picture
                            </h4>

                            <form action="/update-profile" method="POST" enctype="multipart/form-data"
                                class="text-start border p-4 rounded bg-white">
                                <div class="mb-3">
                                    <label for="profileFile" class="form-label">Choose a new image</label>
                                    <input class="form-control" type="file" id="profileFile" name="profilepic"
                                        accept="image/*" required>
                                </div>
                                <button type="submit" class="btn btn-auth w-100 btn-update-theme" id="saveBtn">
                                    <i class="fas fa-save me-2"></i> Save Profile Picture
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // --- Auto hide alerts after 3 seconds ---
                const errorAlert = document.getElementById('popup-alert');
                const successAlert = document.getElementById('popup-alert-success');

                const hideAlert = (alertElement) => {
                    if (alertElement) {
                        setTimeout(() => {
                            const bsAlert = bootstrap.Alert.getOrCreateInstance(alertElement);
                            bsAlert.close();
                        }, 3000);
                    }
                };

                hideAlert(errorAlert);
                hideAlert(successAlert);

                document.querySelector('form')?.addEventListener('submit', () => {
                    document.getElementById('saveBtn').disabled = true;
                    document.getElementById('saveBtn').innerText = 'Uploading...';
                });
            });
        </script>
</body>

</html>